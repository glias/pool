{
  "name": "glias-pool",
  "version": "0.0.0",
  "description": "Glias Pool",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "concurrently": "^5.3.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "dev:ui": "concurrently \"nodemon\" \"npm run start:ui\"",
    "dev:server": "concurrently \"nodemon\" \"npm run start:server\"",
    "start:ui": "cd apps/ui && npm run start",
    "start:server": "cd apps/server && nodemon",
    "build:library": "tsc -b",
    "lint": "eslint --format=pretty -c .eslintrc.js {packages,apps}/**/*.{ts,tsx}",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md}": [
      "npm run lint",
      "npm run test"
    ]
  }
}
