{
  "name": "glias-pool",
  "version": "0.0.0",
  "description": "Glias Pool",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.19",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "dev:ui": "concurrently \"npm run watch:lib\" \"npm run watch:types\" \"npm run start:ui\"",
    "dev:server": "concurrently \"npm run watch:lib\" \"npm run watch:types\" \"npm run start:server\"",
    "start:ui": "cd apps/ui && npm run start",
    "start:server": "cd apps/server && nodemon",
    "watch:lib": "babel -w --relative packages/**/src/ -d ../lib --extensions \".ts\" --ignore \"packages/**/*.spec.ts\"",
    "watch:types": "nodemon",
    "build:lib": "babel --relative packages/**/src/ -d ../lib --extensions \".ts\" --ignore \"packages/**/*.spec.ts\"",
    "build:types": "tsc -b",
    "lint": "concurrently \"npm run lint:lib\" \"npm run lint:ui\" \"npm run lint:server\" ",
    "lint:lib": "eslint --format=pretty -c .eslintrc.js packages/**/*.{ts,tsx}",
    "lint:ui": "yarn workspace @gliaswap/ui run lint",
    "lint:server": "eslint --format=pretty -c .eslintrc.js apps/server/src --ext ts,js",
    "test": "jest",
    "clean": "rimraf packages/*/lib packages/*/tsconfig.tsbuildinfo"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md}": ["eslint --max-warnings=0"]
  },
  "dependencies": {
    "@nervosnetwork/ckb-types": "^0.39.0"
  }
}
